{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": ["plugin:react/recommended", "airbnb"],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": ["react"],
	"rules": {
		"react/jsx-indent": ["error", "tab"],
		"react/jsx-indent-props": ["error", "tab"],
		"indent": ["error", "tab"],
		"no-tabs": "off",
		"react/jsx-filename-extension": "off"
	}
}
